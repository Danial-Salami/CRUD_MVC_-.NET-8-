@model Category

<form method="post">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All" class="text-danger"></div> *@
        <div class="mt-4 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control mt-1 mb-1" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mt-4 row p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control mt-1 mb-1" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row mt-3">
            <div class="col-6 col-md-3 row">
                <button type="submit" class="btn btn-info form-control mx-1">Update</button>
            </div>
            <div class="col-6 col-md-3 row">
                <a asp-controller="Category" asp-action="Index" class="btn btn-dark form-control mx-2">Back to List </a>
            </div>
        </div>

    </div>


</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

